	alignment='TOP_LEFT' style='-fx-padding: 10' spacing='5'>

	<Label text='LED Brightness:' />

	<Button fx:id='enabled' text='Disable' onAction='#handleClick' />

	<Slider fx:id='brightness' min='0.0' max='1.0' />
</fx:root>
